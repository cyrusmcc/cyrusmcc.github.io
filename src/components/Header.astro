---
import Container from "@/components/Container.astro";
import Link from "@/components/Link.astro";
import { SITE } from "@/consts";

const isHome = Astro.url.pathname === "/";
---

<header>
  <Container>
    <div class:list={["flex flex-wrap gap-y-2", isHome ? "justify-end" : "justify-between"]}>
      {!isHome && (
        <Link href="/" underline={false}>
          <div class="font-semibold">
            {SITE.NAME}
          </div>
        </Link>
      )}
      <nav class="flex gap-1">
        <Link href="/projects">
          projects
        </Link>
        <span>
          {`/`}
        </span>
        <Link href="/blog">
          blog
        </Link>
        <span>
          {`/`}
        </span>
        <Link href="/about">
          about
        </Link>
      </nav>
    </div>
  </Container>
</header>
